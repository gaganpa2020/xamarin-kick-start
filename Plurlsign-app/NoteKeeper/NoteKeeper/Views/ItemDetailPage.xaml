<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="NoteKeeper.Views.ItemDetailPage" Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" />
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <StackLayout Spacing="20" Padding="15">
        
        <Picker ItemsSource="{Binding CourseList}"
                SelectedItem="{Binding NoteCourse}"
                x:Name="NoteCourse" 
                Title="Note course" 
                FontSize="Medium">
        </Picker>
        
        <Entry Text="{Binding NoteHeading}"
               x:Name="NoteHeading" 
               Placeholder="Note heading" 
               FontSize="Medium" />
        
        <Editor Text="{Binding NoteText}"
                x:Name="NoteText" 
                AutoSize="TextChanges" 
                Placeholder="Note text" 
                FontSize="Medium" />
    </StackLayout>
</ContentPage>